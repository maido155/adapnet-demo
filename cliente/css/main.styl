fondo=#ecf0f1
color_noti=#01A6D7
noti_hover=#F8F8F8

.announcement-heading
   font-size 40px
   margin 0
.btn-file
   position relative
   overflow hidden
   
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n
.circulo
   border-radius(30px)
   background #f5f5f5
   border 1px solid #ccc
   color black
   height 60px
   margin-top 20%
   padding-top 15px
   position relative
   width 60px
.contenido
   margin-top 90px
.col-sm-2, .col-md-2
   padding-right 0px !important
.col-sm-10, .col-md-10
   padding-left 0px !important
.file
   position absolute
   top 0
   right 0
   min-width 100%
   min-height 100%
   font-size 999px
   text-align righ
   opacity 0
   background red
   cursor inherit
   display block
      input[readonly]
         background-color white !important
         cursor text !important
.glyphicon  
   margin-right 10px
.gray
   color #A0A0A0
#logout
   border-radius(5px)
   border solid 1px #DDDDDD
   padding 3px 5px

.navbar
   padding 10px 5px !important
.noti
   background-color #F8F8F8
.notification
   border-radius(19px)
   background-color white
   bottom 20px
   border solid 1px #ADADAD
   color #333333
   float right
   left -5%;
   padding 2px 8px
   position relative
   &:hover
      background lighten(noti_hover, 0%)
#notificaciones
   margin-top 10px
   

.panel-body
   padding:0px
.panel-buttons
   padding:10px
.panel-body table tr td
   padding-left 15px
.panel-body .table
   margin-bottom: 0px
#profile
   margin-top 10px
.table tr td a 
   cursor pointer

body
   font-family "Segoe UI"
   font-size 16px
   background-color fondo !important;
   overflow-x hidden
h1,h2,h3,h4,h5
   font-family "Segoe UI" !important
   font-weight lighter !important 
   font-style: normal !important

form
   padding 5px 10px;



@media (max-width: 768px)
   .contenido
      margin-top 250px !important
      margin-bottom 70px !important
   #footerAdapnet
      position relative
   .notification
      border-radius(5px)
      background-color white
      bottom 3px
      border solid 1px #ADADAD
      color #333333
      float right
      left 5px;
      padding 2px 8px
      position relative
      &:hover
         background lighten(noti_hover, 0%)
   .btn
      border solid 0px !important
      background-color #222222 !important; 
   #notificaciones
      margin-top 10px !important
      border-radius(5px) !important
      //border solid 1px #f8f8f8 !important
   .offer-default
      margin-top 10px !important

